<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bashblankizdat_app</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bashblankizdat_app.styles.css" asp-append-version="true" />
    <link href="~/lib/iconfont/material-icons.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="logo">
            <img src="~/res/img/Logo-text.svg" alt="Логотип">
        </div>
        <nav>

            <a href="~/css/site.css" class="flex-row text-decoration-none">
                <i class="material-icons text-white">menu</i>
                <span class="bg-transparent border-0 text-white">Каталог</span>
            </a>
            <a href="#">Товары</a>
            <!-- Добавьте другие кнопки здесь -->
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - bashblankizdat_app - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
